<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main3"
        tools:context=".Main3Activity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Available : "
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/countId"
        android:textSize="30dp"/>

        <TextView
                android:text="Balance : "
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/balanceId"
                android:textSize="30dp"/>
        <LinearLayout
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:text="Select quantity : "
                      android:visibility="invisible"
            />
            <Button
                    android:text="-"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/minusId"
                    android:visibility="invisible"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="20dp"
                      android:text="0"
                      android:id="@+id/quantId"
                      android:visibility="invisible"
            />

            <Button
                    android:text="+"
                    android:visibility="invisible"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/plusId"/>

        </LinearLayout>
        <Button
                android:text="Pay by card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cardMode"/>
        <Button
                android:text="COIN MODE"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/coinMode"/>


    </LinearLayout>

</RelativeLayout>